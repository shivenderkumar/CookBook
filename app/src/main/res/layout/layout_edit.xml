<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <ImageView
        android:id="@+id/imageview_Crop"
        android:src="@drawable/ic_baseline_crop_free_24"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/selector_filter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textview_Crop"/>

    <TextView
        android:id="@+id/textview_Crop"
        android:text="Crop"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageview_Crop"
        app:layout_constraintRight_toRightOf="@+id/imageview_Crop"
        app:layout_constraintTop_toBottomOf="@+id/imageview_Crop"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/imageview_Rotate"
        android:src="@drawable/ic_baseline_rotate_24"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/selector_filter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toRightOf="@+id/imageview_Crop"
        app:layout_constraintRight_toLeftOf="@+id/imageview_Contrast"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textview_Rotate"/>

    <TextView
        android:id="@+id/textview_Rotate"
        android:text="Rotate"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageview_Rotate"
        app:layout_constraintRight_toRightOf="@+id/imageview_Rotate"
        app:layout_constraintTop_toBottomOf="@+id/imageview_Rotate"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/imageview_Contrast"
        android:src="@drawable/ic_baseline_contrast_24"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/selector_filter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toRightOf="@+id/imageview_Rotate"
        app:layout_constraintRight_toLeftOf="@+id/imageview_Brightness"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textview_Contrast"/>

    <TextView
        android:id="@+id/textview_Contrast"
        android:text="Contrast"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageview_Contrast"
        app:layout_constraintRight_toRightOf="@+id/imageview_Contrast"
        app:layout_constraintTop_toBottomOf="@+id/imageview_Contrast"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/imageview_Brightness"
        android:src="@drawable/ic_baseline_brightness_medium_24"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/selector_filter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textview_Brightness"/>

    <TextView
        android:id="@+id/textview_Brightness"
        android:text="Brightness"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageview_Brightness"
        app:layout_constraintRight_toRightOf="@+id/imageview_Brightness"
        app:layout_constraintTop_toBottomOf="@+id/imageview_Brightness"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>